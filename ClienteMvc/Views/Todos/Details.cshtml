@model TodoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>

<div>
    <h4>EPS</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Id)
        </dd>
        <dt class="col-sm-2">
            Fecha Creación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.RegistradoAt)
        </dd>
        <dt class="col-sm-2">
            Todo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Nombre)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @if (Model.Item.Activo == true)
            {
                <span>Activo</span>
            }
            else
            {
                <span>Finalizado</span>
            }
        </dd>
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Usuario.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Item.Id">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
