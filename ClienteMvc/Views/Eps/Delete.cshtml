@model EpsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<div>
    <h4>EPS</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Id)
        </dd>
        <dt class="col-sm-2">
            Fecha Creación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.RegistradoAt)
        </dd>
        <dt class="col-sm-2">
            EPS
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Item.Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
